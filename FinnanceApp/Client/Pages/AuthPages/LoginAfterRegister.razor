@page "/loginar"
@layout EmptyLayout
@namespace FinnanceApp.Client.Pages.AuthPages
@inject NavigationManager navigationManager
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@inject AuthenticationStateProvider AuthStateProvider
@inject FinnanceApp.Client.Services.IAuthService AuthServ
@inject NotificationService notificationService

<div class="container">


    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!--todo-->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Witaj! </h1>
                                </div>
                                <EditForm class="user" Model="@user" OnValidSubmit="HandleLogin">
                                    <Alert Message="@message" MessageType="@messageType"></Alert>
                                    <DataAnnotationsValidator />
                                    <ValidationSummary />
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user"
                                            id="exampleInputEmail" aria-describedby="emailHelp"
                                            placeholder="Podaj Adres Email..." @bind-value="user.Email">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-user"
                                            id="exampleInputPassword" placeholder="Hasło " @bind-value="user.Password">
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" id="customCheck"
                                                @bind-value="user.RememberMe" />
                                            <label class="custom-control-label" for="customCheck">
                                                Zapamiętaj mnie
                                            </label>
                                        </div>
                                    </div>

                                    <input type="submit" disabled="@isBusy" Value="Zaloguj"
                                        class="btn btn-primary btn-user btn-block">

                                </EditForm>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="/register">Nie masz jeszcze konta? Załóż je!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

@code {
    private FinnanceApp.Shared.Models.UserLogin user = new FinnanceApp.Shared.Models.UserLogin();
    Models.AlertMessageType messageType = Models.AlertMessageType.Success;
    public string message { get; set; } = "Rejestracja Udana! Zaloguj się!";
    bool isBusy = false;
   
    private async Task HandleLogin()
    {
        isBusy = true;
        var result = await AuthServ.login(user);
        if (result.isSuccess)
        {
            await LocalStorage.SetItemAsync<string>("AuthToken", result.Data);
            await AuthStateProvider.GetAuthenticationStateAsync();
            navigationManager.NavigateTo("");
        }
        else
        {
            message = result.Message;
            messageType = Models.AlertMessageType.Error;
        }
        isBusy = false;

    }
}
<style>
    body {
        background-color: #4e73df;
        background-image: linear-gradient(180deg, #4e73df 10%, #224abe 100%);
        background-size: cover;
    }
</style>
